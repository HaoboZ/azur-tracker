{
	"compilerOptions": {
		"target"                          : "es5",
		"lib"                             : [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs"                         : true,
		"skipLibCheck"                    : true,
		"strict"                          : false,
		"forceConsistentCasingInFileNames": true,
		"noEmit"                          : true,
		"incremental"                     : true,
		"esModuleInterop"                 : true,
		"module"                          : "esnext",
		"moduleResolution"                : "node",
		"resolveJsonModule"               : true,
		"isolatedModules"                 : true,
		"jsx"                             : "preserve"
	},
	"include"        : [
		"next-env.d.ts",
		"src/**/*",
		"next-sitemap.config.js",
		"capacitor.config.ts"
	],
	"exclude"        : [
		"node_modules",
		"out",
		"android",
		"ios",
		"electron"
	]
}
