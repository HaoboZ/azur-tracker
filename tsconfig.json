{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"paths": {
			"@/src/*": [
				"./src/*"
			],
			"@/components/*": [
				"./src/components/*"
			],
			"@/app/*": [
				"./app/*"
			],
			"@/public/*": [
				"./public/*"
			]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"strictNullChecks": false,
		"target": "esnext"
	},
	"exclude": [
		"node_modules",
		"out",
		"android",
		"ios",
		"electron"
	],
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx"
	]
}
