{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"paths": {
			"@/*": ["./*"],
			"@/components/*": ["./src/components/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"strictNullChecks": false,
		"target": "esnext"
	},
	"exclude": ["node_modules", "out", "android", "ios", "electron"],
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.*ts",
		"**/*.tsx",
		"**/*.*js",
		"**/*.jsx"
	]
}
